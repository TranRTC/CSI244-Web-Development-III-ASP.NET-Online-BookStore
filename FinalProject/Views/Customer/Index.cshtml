@model IEnumerable<FinalProject.Models.Customer>

<h2 class="mb-3">Customers</h2>
<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New Customer</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone</th>
            <th style="text-align: center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Address</td>
                <td>@customer.Phone</td>
                <td style="text-align: center;">
                    <a asp-action="Details" asp-route-id="@customer.CustomerID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
