@{
}

@model IEnumerable<FinalProject.Models.Order>

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().TotalPrice)</th>
            <th></th> <!-- Actions Column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => order.OrderDate)</td>
                <td>@Html.DisplayFor(modelItem => order.TotalPrice)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@order.OrderID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@order.OrderID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
