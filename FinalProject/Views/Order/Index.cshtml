@model IEnumerable<FinalProject.Models.Order>

<h2 class="mb-3">Orders</h2>
<p>
    <a asp-controller="Order" asp-action="Create" class="btn btn-outline-primary">Create New Order</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>OrderID</th>
            <th>Customer Name</th>
            <th>OrderDate</th>
            <th>TotalPrice</th>
            <th style="text-align: center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.Customer.Name</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalPrice</td>
                <td style="text-align: center;">
                    <a asp-action="Details" asp-route-id="@order.OrderID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@order.OrderID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
